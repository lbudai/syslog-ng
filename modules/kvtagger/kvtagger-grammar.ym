%code top {
#include "kvtagger-parser.h"

}


%code {

#include "kvtagger.h"
#include "cfg-parser.h"
#include "cfg-grammar.h"
#include "kvtagger-grammar.h"
#include "syslog-names.h"
#include "messages.h"

}

%name-prefix "kvtagger_"

/* this parameter is needed in order to instruct bison to use a complete
 * argument list for yylex/yyerror */

%lex-param {CfgLexer *lexer}
%parse-param {CfgLexer *lexer}
%parse-param {LogParser **instance}
%parse-param {gpointer arg}

/* INCLUDE_DECLS */

%token KW_KVTAGGER
%token KW_KVTAGGER_DATABASE
%token KW_KVTAGGER_SELECTOR
%token KW_KVTAGGER_DEFAULT_SELECTOR
%token KW_KVTAGGER_PREFIX

%type	<ptr> parser_expr_csv

%%

start
        : LL_CONTEXT_PARSER parser_expr_csv                  { YYACCEPT; }
        ;


parser_expr_csv
        : KW_KVTAGGER '('
          {
            last_parser = *instance = kvtagger_parser_new(configuration);
          }
          parser_csv_opts
          ')'					{ $$ = last_parser; }
        ;


parser_csv_opts
        : parser_csv_opt parser_csv_opts
        |
        ;

parser_csv_opt
        : KW_KVTAGGER_DATABASE '(' string ')'
        {
            kvtagger_set_filename(last_parser, $3);
            free($3);
        } | KW_KVTAGGER_SELECTOR '(' string ')'
        {
            kvtagger_set_database_selector_template(last_parser, $3);
            free($3);
        } | KW_KVTAGGER_DEFAULT_SELECTOR '(' string ')'
        {
            kvtagger_set_database_default_selector(last_parser, $3);
            free($3);
        } | KW_KVTAGGER_PREFIX '(' string ')'
        {
            kvtagger_set_prefix(last_parser, $3);
            free($3);
        };

/* INCLUDE_RULES */

%%
